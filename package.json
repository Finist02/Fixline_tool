{
    "name": "fixline-tool",
    "displayName": "Fixline tool",
    "description": "Fixline tool",
    "version": "1.1.31",
    "publisher": "Danil",
    "icon": "images/fixline.png",
    "repository": {
        "url": "https://github.com/Finist02/Fixline_tool",
        "type": "git"
    },
    "engines": {
        "vscode": "^1.71.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:ctrlDpsTree",
        "onLanguage:ctrl",
        "onLanguage:ctrlpp"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "dpes-explorer",
                    "title": "Dpes Explorer",
                    "icon": "media/dep.svg"
                }
            ]
        },
        "views": {
            "dpes-explorer": [
                {
                    "id": "ctrlDpsTree",
                    "name": "Dpes",
                    "icon": "media/dep.svg",
                    "contextualTitle": "Dpes explorer"
                }
            ]
        },
        "languages": [
            {
                "id": "ctrl",
                "extensions": [
                    ".ctl"
                ],
                "aliases": [
                    "Ctrl",
                    "ctrl"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "ctrlpp",
                "extensions": [
                    ".ctl"
                ],
                "aliases": [
                    "Ctrl++",
                    "Ctrlpp",
                    "ctrlpp"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ctrl",
                "scopeName": "source.ctrl",
                "path": "./syntaxes/ctrl.tmLanguage.json"
            },
            {
                "language": "ctrlpp",
                "scopeName": "source.ctrlpp",
                "path": "./syntaxes/ctrlpp.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "ctrl",
                "path": "./snippets/ctrl.json"
            },
            {
                "language": "ctrlpp",
                "path": "./snippets/ctrl.json"
            },
            {
                "language": "ctrlpp",
                "path": "./snippets/ctrlpp.json"
            },
            {
                "language": "ctrlpp",
                "path": "./snippets/doxygen.json"
            }
        ],
        "commands": [
            {
                "command": "ctrlDpsTree.refreshEntry",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "ctrlDpsTree.searchDpe",
                "title": "Search dpe",
                "icon": "$(search)"
            },
            {
                "command": "ctrlDpsTree.view",
                "title": "View",
                "icon": "$(checklist)"
            },
            {
                "command": "extension.OpenUnitTest",
                "title": "Open UnitTest",
                "icon": "$(preview)",
                "category": "Fixline"
            },
            {
                "command": "extension.CreateChildClass",
                "title": "Create child class",
                "icon": "$(preview)",
                "category": "Fixline"
            },
            {
                "command": "extension.OpenPanel",
                "title": "Open panel",
                "icon": "$(preview)",
                "category": "Fixline"
            },
            {
                "command": "extension.OpenHelpCtrl",
                "title": "Open ctrl Help",
                "icon": "$(book)",
                "category": "Fixline"
            },
            {
                "command": "extension.OpenProjectPanel",
                "title": "Open project panel",
                "icon": "$(preview)",
                "category": "Fixline"
            },
            {
                "command": "extension.CheckScript",
                "title": "Check Script",
                "icon": "$(debug)",
                "category": "Fixline"
            },
            {
                "command": "extension.CreateChangelog",
                "title": "Create changelog",
                "icon": "$(debug)",
                "category": "Fixline"
            },
            {
                "command": "extension.CreateDoxyHelp",
                "title": "Create help doxygen",
                "icon": "$(debug)",
                "category": "Fixline"
            },
            {
                "command": "extension.GetHelpChatGpt",
                "title": "Get help Ctrlpp",
                "icon": "$(debug)",
                "category": "Fixline"
            },
            {
                "command": "extension.RunScript",
                "title": "Run script",
                "icon": "$(run)",
                "category": "Fixline"
            },
            {
                "command": "extension.OpenLogs",
                "title": "Open Log",
                "icon": "$(list-flat)",
                "category": "Fixline"
            },
            {
                "command": "extension.Panelpreview",
                "title": "Panel preview",
                "icon": "$(open-preview)",
                "category": "Fixline"
            },
            {
                "command": "extension.StartUnitTests",
                "title": "Start tests",
                "category": "Fixline"
            },
            {
                "command": "extension.CreateUMLDiagrams",
                "title": "Create UML diagrams",
                "category": "Fixline"
            },
            {
                "command": "extension.LoadDPL",
                "title": "Load dpl",
                "icon": "$(preview)",
                "category": "Fixline"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "ctrlDpsTree.refreshEntry",
                    "when": "view == ctrlDpsTree",
                    "group": "navigation"
                },
                {
                    "command": "ctrlDpsTree.searchDpe",
                    "when": "view == ctrlDpsTree",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "ctrlDpsTree.view",
                    "when": "view == ctrlDpsTree && viewItem == dpel",
                    "group": "inline"
                }
            ],
            "explorer/context": [
                {
                    "command": "extension.OpenPanel",
                    "when": "resourceExtname == .xml",
                    "group": "navigation@6"
                },
                {
                    "command": "extension.Panelpreview",
                    "when": "resourceExtname == .xml",
                    "group": "navigation@6"
                },
                {
                    "command": "extension.CheckScript",
                    "when": "resourceExtname == .ctl",
                    "group": "navigation@6"
                },
                {
                    "command": "extension.RunScript",
                    "when": "resourceExtname == .ctl",
                    "group": "navigation@6"
                }
            ],
            "editor/title": [
                {
                    "command": "extension.OpenPanel",
                    "group": "navigation",
                    "when": "resourceExtname == .xml"
                },
                {
                    "command": "extension.Panelpreview",
                    "group": "navigation",
                    "when": "resourceExtname == .xml"
                },
                {
                    "command": "extension.CheckScript",
                    "group": "navigation",
                    "when": "resourceExtname == .ctl"
                },
                {
                    "command": "extension.RunScript",
                    "group": "navigation",
                    "when": "resourceExtname == .ctl"
                }
            ]
        },
        "configuration": [
            {
                "type": "object",
                "title": "Fixline tool",
                "properties": {
                    "FixLineTool.Syntax.CheckSyntax": {
                        "type": "boolean",
                        "default": false,
                        "description": "Ð¡heck syntax"
                    },
                    "FixLineTool.Syntax.KnownItems": {
                        "type": "array",
                        "default": [],
                        "description": "Known items"
                    },
                    "FixLineTool.Syntax.InnersReadFiles": {
                        "type": "number",
                        "default": 2,
                        "description": "Deep read files"
                    },
                    "FixLineTool.Syntax.HighlightCommentDoxygen": {
                        "type": "boolean",
                        "default": false,
                        "description": "Highlight comment Doxygen"
                    },
                    "FixLineTool.OpenPanel.UserName": {
                        "type": "string",
                        "default": "root",
                        "description": "User Name"
                    },
                    "FixLineTool.OpenPanel.Dollars": {
                        "type": "string",
                        "default": "",
                        "description": "Dollars"
                    },
                    "FixLineTool.OpenPanel.Password": {
                        "type": "string",
                        "default": "",
                        "description": "Password"
                    },
                    "FixLineTool.Gitlab.GitlabUrl": {
                        "type": "string",
                        "default": "http:///git.fixline.tech/",
                        "description": "GitlabUrl"
                    }
                }
            }
        ]
    },
    "capabilities": {
        "definitionProvider": "true"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "^16.18.105",
        "@types/vscode": "^1.71.0",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^3.10.1",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^8.57.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "axios": "^1.7.4",
        "braces": "^3.0.3",
        "fs": "^0.0.1-security",
        "fsp-xml-parser": "^1.0.0",
        "highlight.js": "^11.8.0",
        "markdown-it": "^13.0.2",
        "os": "^0.1.2",
        "xml2js": "^0.6.2"
    }
}
